<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.sana.android.activity.settings.User_profile"
    android:background="@drawable/bg_hdpi">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USER NAME"
        android:id="@+id/text_editprofile_firstname"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/edittext_editprofile_firstname"
        android:layout_alignTop="@+id/text_editprofile_firstname"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAME"
        android:id="@+id/text_editprofile_lastname"
        android:layout_below="@+id/edittext_editprofile_firstname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edittext_editprofile_lastname"
        android:layout_below="@+id/edittext_editprofile_firstname"
        android:layout_alignRight="@+id/edittext_editprofile_firstname"
        android:layout_alignEnd="@+id/edittext_editprofile_firstname"
        android:layout_alignLeft="@+id/edittext_editprofile_firstname"
        android:layout_alignStart="@+id/edittext_editprofile_firstname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PASSWORD"
        android:id="@+id/text_editprofile_password"
        android:layout_below="@+id/edittext_editprofile_lastname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/text_editprofile_firstname"
        android:layout_alignEnd="@+id/text_editprofile_firstname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:text="BLOOD GROUP"
        android:layout_below="@+id/edittext_editprofile_password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edittext_editprofile_bloodgroup"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/edittext_editprofile_lastname"
        android:layout_alignStart="@+id/edittext_editprofile_lastname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HEIGHT"
        android:id="@+id/text_editprofile_height"
        android:layout_below="@+id/edittext_editprofile_bloodgroup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/text_editprofile_lastname"
        android:layout_alignEnd="@+id/text_editprofile_lastname" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/edittext_editprofile_height"
        android:layout_alignTop="@+id/text_editprofile_height"
        android:layout_alignLeft="@+id/edittext_editprofile_bloodgroup"
        android:layout_alignStart="@+id/edittext_editprofile_bloodgroup" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="inches"
        android:id="@+id/text_editprofile_inches"
        android:layout_toRightOf="@+id/edittext_editprofile_height"
        android:layout_toEndOf="@+id/edittext_editprofile_height"
        android:layout_below="@+id/text_editprofile_height" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WEIGHT"
        android:id="@+id/text_editprofile_weight"
        android:layout_below="@+id/edittext_editprofile_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/edittext_editprofile_weight"
        android:layout_alignTop="@+id/text_editprofile_weight"
        android:layout_alignLeft="@+id/edittext_editprofile_height"
        android:layout_alignStart="@+id/edittext_editprofile_height" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pounds"
        android:id="@+id/textView2"
        android:layout_below="@+id/text_editprofile_weight"
        android:layout_toRightOf="@+id/edittext_editprofile_weight"
        android:layout_toEndOf="@+id/edittext_editprofile_weight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HAEMOGLOBIN"
        android:id="@+id/text_editprofile_hb"
        android:layout_below="@+id/edittext_editprofile_weight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/edittext_editprofile_hb"
        android:layout_alignTop="@+id/text_editprofile_hb"
        android:layout_alignLeft="@+id/edittext_editprofile_weight"
        android:layout_alignStart="@+id/edittext_editprofile_weight" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edittext_editprofile_password"
        android:layout_alignTop="@+id/text_editprofile_password"
        android:layout_alignLeft="@+id/edittext_editprofile_bloodgroup"
        android:layout_alignStart="@+id/edittext_editprofile_bloodgroup"
        android:layout_alignRight="@+id/edittext_editprofile_bloodgroup"
        android:layout_alignEnd="@+id/edittext_editprofile_bloodgroup" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE CHANGES"
        android:id="@+id/btn_savechanges"
        android:layout_below="@+id/edittext_editprofile_hb"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DELETE ACCOUNT"
        android:id="@+id/btn_delete_account"
        android:layout_below="@+id/btn_savechanges"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp" />

</RelativeLayout>
