<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.sana.android.Registration"
    android:background="@drawable/bg_hdpi"
    android:id="@+id/layout_registration">

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/first_name"
        android:id="@+id/text_login_first_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/edittext_login_firstname"
        android:textAlignment="center"
        android:textStyle="bold" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/edittext_login_firstname"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/last_name"
        android:id="@+id/text_login_last_name"
        android:textAlignment="center"
        android:layout_below="@+id/text_login_first_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/edittext_login_lastname"
        android:layout_alignTop="@+id/text_login_last_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PASSWORD"
        android:id="@+id/text_login_password"
        android:layout_below="@+id/text_login_last_name"
        android:layout_alignRight="@+id/text_login_last_name"
        android:layout_alignEnd="@+id/text_login_last_name"
        android:layout_marginTop="43dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edittext_login_password"
        android:layout_alignTop="@+id/text_login_password"
        android:layout_alignLeft="@+id/edittext_login_lastname"
        android:layout_alignStart="@+id/edittext_login_lastname"
        android:layout_alignRight="@+id/edittext_login_lastname"
        android:layout_alignEnd="@+id/edittext_login_lastname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edittext_login_bloodgroup"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/text_login_password"
        android:layout_alignRight="@+id/edittext_login_password"
        android:layout_alignEnd="@+id/edittext_login_password"
        android:layout_alignLeft="@+id/edittext_login_password"
        android:layout_alignStart="@+id/edittext_login_password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLOOD GROUP"
        android:id="@+id/text_login_blood_grp"
        android:layout_alignTop="@+id/edittext_login_bloodgroup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/edittext_login_bloodgroup"
        android:textStyle="bold"
        android:layout_alignRight="@+id/text_login_password"
        android:layout_alignEnd="@+id/text_login_password" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/edittext_login_height"
        android:layout_below="@+id/edittext_login_bloodgroup"
        android:layout_toRightOf="@+id/text_login_blood_grp"
        android:layout_marginTop="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="inches"
        android:id="@+id/text_inches"
        android:layout_alignBottom="@+id/edittext_login_height"
        android:layout_toRightOf="@+id/edittext_login_height"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WEIGHT"
        android:id="@+id/text_login_weight"
        android:layout_below="@+id/edittext_login_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HEIGHT"
        android:id="@+id/text_login_height"
        android:layout_alignTop="@+id/edittext_login_height"
        android:layout_toLeftOf="@+id/edittext_login_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/edittext_login_height"
        android:textStyle="bold" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/edittext_login_weight"
        android:layout_alignTop="@+id/text_login_weight"
        android:layout_alignLeft="@+id/edittext_login_bloodgroup"
        android:layout_alignStart="@+id/edittext_login_bloodgroup" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pounds"
        android:id="@+id/text_pound"
        android:layout_alignBottom="@+id/edittext_login_weight"
        android:layout_toRightOf="@+id/edittext_login_weight"
        android:layout_toEndOf="@+id/edittext_login_weight"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:id="@+id/btn_savechanges"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HAEMOGLOBIN"
        android:id="@+id/text_editprofile_hb"
        android:layout_below="@+id/edittext_login_weight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:layout_toLeftOf="@+id/edittext_login_height"
        android:layout_toStartOf="@+id/edittext_login_height"
        android:textStyle="bold" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/edittext_login_haemoglobin"
        android:layout_alignTop="@+id/text_editprofile_hb"
        android:layout_alignLeft="@+id/edittext_login_weight"
        android:layout_alignStart="@+id/edittext_login_weight" />

</RelativeLayout>
